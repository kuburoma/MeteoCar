<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- OBD -->
    <PreferenceScreen
        android:icon="@null"
        android:key="button_obd_category"
        android:persistent="false"
        android:title="@string/settings_obd_settings">
        <CheckBoxPreference
            android:defaultValue="true"
            android:icon="@null"
            android:key="checkbox_obd_enabled"
            android:summary="@string/settings_obd_enabled_summary"
            android:title="@string/settings_obd_enabled" />
        <ListPreference
            android:icon="@null"
            android:key="button_obd_list"
            android:summary="summary"
            android:title="@string/settings_obd_devices" />
        <PreferenceScreen
            android:icon="@null"
            android:key="button_obd_pids_category"
            android:persistent="false"
            android:title="@string/settings_obd_pids_title"/>
    </PreferenceScreen>

    <PreferenceScreen
        android:icon="@null"
        android:key="button_network_category"
        android:persistent="false"
        android:title="@string/settings_network_settings">
        <EditTextPreference
            android:defaultValue="localhost:9000"
            android:icon="@null"
            android:key="network_address"
            android:title="Adresa serveru"
            android:summary="Ve tvaru: meteocar.herokuapp.com" />
    </PreferenceScreen>

    <!-- GPS -->
    <PreferenceScreen
        android:icon="@null"
        android:key="button_gps_category"
        android:persistent="false"
        android:title="@string/settings_gps_settings">
        <CheckBoxPreference
            android:defaultValue="true"
            android:icon="@null"
            android:key="checkbox_gps_enabled"
            android:summary="@string/settings_gps_enabled_summary"
            android:title="@string/settings_gps_enabled" />
    </PreferenceScreen>
</PreferenceScreen>