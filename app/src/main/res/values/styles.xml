<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <!-- Styly menu aktivity -->
    <style name="MenuActTheme" parent="AppTheme">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <!--<item name="android:windowActionBarOverlay">false</item>-->
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <!--<item name="android:homeAsUpIndicator">@drawable/menu_action_bar_icon</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>-->
    </style>

<!-- Oddělovač mezi položkami vyjížděcího menu -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- Styly settings aktivity (nastavení) -->
    <style name="SettingsActTheme" parent="AppTheme">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:icon">@android:color/transparent</item>
        <!--<item name="android:windowActionBar">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
          -->
    </style>

</resources>
